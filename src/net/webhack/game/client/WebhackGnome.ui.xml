<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.plineWindow {
			display: table-cell;
			vertical-align: top;
			height: 100%;
		}
		
		.plineDiv {
			overflow-y: scroll;
			height: 100%;
		}
		
		.status {
			display: table-cell;
			vertical-align: top;
			width: 400px;
		}
		
		.equipment {
			display: table-cell;
			vertical-align: top;
			width: 100px;
		}
		
		.toppart {
			display: table;
			width: 100%;
		}
	</ui:style>

	<g:HTMLPanel>
		<div class='{style.toppart}'>
			<div class='{style.plineWindow}'>
				<div class='{style.plineDiv}' ui:field="plineContainer"></div>
			</div>
			<div class='{style.status}'>
				<h1>
					<span ui:field='heading1'>Webhack</span>
				</h1>
				<h2>The Dungeons of Doom, level 1</h2>
				<hr />
				<table width="100%">
					<tr>
						<td>
							<img src="str.png" height="40" width="40"></img>
						</td>
						<td>
							<img src="dex.png" height="40" width="40"></img>
						</td>
						<td>
							<img src="con.png" height="40" width="40"></img>
						</td>
						<td>
							<img src="int.png" height="40" width="40"></img>
						</td>
						<td>
							<img src="wis.png" height="40" width="40"></img>
						</td>
						<td>
							<img src="cha.png" height="40" width="40"></img>
						</td>
					</tr>
					<tr>
						<td>STR: 10</td>
						<td>DEX: 12</td>
						<td>CON: 16</td>
						<td>INT: 13</td>
						<td>WIS: 16</td>
						<td>CHA: 8</td>
					</tr>
				</table>
				<hr />
				<table width="100%">
					<tr>
						<td>
							HP:
							<span ui:field='hitpoints'>999/999</span>
						</td>
						<td>AC: 7</td>
						<td>Power: 8/8</td>
						<td>
							Au:
							<span ui:field='gold'>0</span>
						</td>
					</tr>
				</table>
				<hr />
				<table>
					<tr>
						<td>Level: 1</td>
						<td>Exp: 0</td>
					</tr>
				</table>
				<hr />

			</div>
			<div class='{style.equipment}'>
				<canvas width="100" height="200">
				</canvas>
				Equipment
			</div>
		</div>

		<div id="bottompart">
			<canvas ui:field="canvas" width="1280" height="336"
				style="background-image: url('mapbg.png')"></canvas>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
